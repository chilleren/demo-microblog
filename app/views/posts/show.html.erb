

<div class="content">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h4><%= @post.user.username %></h4>
      <%= render "shared/post", post: @post %>


      <div class="comments">
        <% if @comments.length > 0 %>
          <h2>comments</h2>
          <% @comments.each do |comment| %>
            <%= render "comments/comment", comment: comment %>
          <% end %>
        <% else %>
          <h2>no comments</h2>
        <% end %>
      </div>
       
    </div> 
  </div>
</div>